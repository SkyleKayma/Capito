<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ca_blue">

    <LinearLayout
        android:id="@+id/linearLayoutTopPlayer"
        android:layout_width="288dp"
        android:layout_height="80dp"
        android:background="@color/ca_blue_light"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

    </LinearLayout>

    <TextView
        android:id="@+id/textViewTopPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/ca_ivoiry"
        android:paddingStart="12dp"
        android:paddingTop="8dp"
        android:paddingEnd="12dp"
        android:paddingBottom="8dp"
        android:textColor="@color/ca_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutTopPlayer"
        app:layout_constraintVertical_bias="0.0"
        tools:text="Skyle" />

    <LinearLayout
        android:id="@+id/linearLayoutLeftPlayer"
        android:layout_width="80dp"
        android:layout_height="288dp"
        android:background="@color/ca_blue_light"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>

    <TextView
        android:id="@+id/textViewLeftPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/ca_ivoiry"
        android:paddingStart="12dp"
        android:paddingTop="8dp"
        android:paddingEnd="12dp"
        android:paddingBottom="8dp"
        android:rotation="90"
        android:textColor="@color/ca_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/linearLayoutLeftPlayer"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Rush" />

    <LinearLayout
        android:id="@+id/linearLayoutRightPlayer"
        android:layout_width="80dp"
        android:layout_height="288dp"
        android:layout_gravity="center"
        android:background="@color/ca_blue_light"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

    </LinearLayout>

    <TextView
        android:id="@+id/textViewRightPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/ca_ivoiry"
        android:paddingStart="12dp"
        android:paddingTop="8dp"
        android:paddingEnd="12dp"
        android:paddingBottom="8dp"
        android:rotation="-90"
        android:textColor="@color/ca_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/linearLayoutRightPlayer"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Rush" />

    <LinearLayout
        android:id="@+id/linearLayoutBotPlayer"
        android:layout_width="288dp"
        android:layout_height="80dp"
        android:background="@color/ca_blue_light"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

    </LinearLayout>

    <TextView
        android:id="@+id/textViewBotPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/cg_grey_light"
        android:paddingStart="12dp"
        android:paddingTop="8dp"
        android:paddingEnd="12dp"
        android:paddingBottom="8dp"
        android:textColor="@color/cg_orange"
        app:layout_constraintBottom_toTopOf="@+id/linearLayoutBotPlayer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:text="Skyle" />

</android.support.constraint.ConstraintLayout>